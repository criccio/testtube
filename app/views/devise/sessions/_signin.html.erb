<div>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>
	<div class="control-group">
 		<%= f.label :login, :class => "control-label"%>
 		<%= f.text_field :login, :class => "input-xlarge" %>
	</div>
	<div class="control-group">
		<%= f.label :password, :class => "control-label"%>
		<%= f.password_field :password, :class => "input-xlarge" %>
	</div>
	<div class="form-actions">
		<%= f.submit "Sign in", :class => "btn btn-primary" %>
		<%= link_to "Cancel", :back, :class => "btn" %>
	</div>
	<% end %>
</div>
 
